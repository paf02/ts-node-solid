{
  "name": "typescript-express-rest-template",
  "version": "1.0.0",
  "description": "Typescript Restful Express project template",
  "main": "server.js",
  "scripts": {
    "clear": "rimraf dist/ && rimraf files/ && rimraf logs/",
    "build": "npm run clear && cross-env NODE_ENV=local && tsc",
    "debug": "npm run clear && cross-env NODE_ENV=local nodemon --nolazy --inspect-brk -r ts-node/register src/server.ts",
    "local": "npm run clear && cross-env NODE_ENV=local nodemon -r ts-node/register src/server.ts",
    "local:dist": "cross-env NODE_ENV=local node dist/server.js",
    "dev": "cross-env NODE_ENV=dev node dist/server.js",
    "test": "cross-env NODE_ENV=test node dist/server.js",
    "prod": "cross-env NODE_ENV=prod node dist/server.js",
    "unit-tests": "npm run build && mocha dist/**/*.spec.js",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix"
  },
  "keywords": [
    "SOLID",
    "Typescript",
    "Boilerplate",
    "multi-environment",
    "es5",
    "node 6 to node 8"
  ],
  "author": "Pablo Montero",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.9.1",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "cross-env": "^5.0.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "http-status": "^1.3.1",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "mongoose": "^5.4.19",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.0.2",
    "winston": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.1",
    "@types/mocha": "5.2.5",
    "@types/mongoose": "^5.3.23",
    "@types/node": "^10.12.18",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.1.0",
    "eslint": "5.12.1",
    "mocha": "5.2.0",
    "nodemon": "^1.18.9",
    "rimraf": "^2.6.3",
    "supertest": "3.4.2",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4"
  }
}
